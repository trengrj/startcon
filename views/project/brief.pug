extends ../layout


block content
  h4(class='main-title') Brief
  p(class='text-center') Our world class freelancers will work to your exact brief to ensure you are 100% satisfied.
  div(class='project-list')
    div(class='row')
      div(class='col-sm-8 col-sm-push-2 col-md-6 col-md-push-3')
        div(class='clear clearfix')
          h5(class='text-center' style='font-weight:bold') Budget
          h5(class='text-center' id='budget-value') $10,000
          p(class='range-field')
            input(type='range' id='test' value=10000 step=100 min=300 max=30000 oninput="$('#budget-value').text('$' + this.value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','))")
          span(class='pull-left') Cheap and Cheerful
          span(class='pull-right') Luxurious
        div(class='clear clearfix')
          h5(class='text-center' style='font-weight:bold') Time
          h5(class='text-center' id='time-value') 7 days
          p(class='range-field')
            input(type='range' id='test' value=7 min=1 max=14 oninput="$('#time-value').text(this.value + ' days')")
          span(class='pull-left') Casual
          span(class='pull-right') Urgent
        div(class='clear clearfix')
          h5(class='text-center' style='font-weight:bold') Photos
          div(class='row grid-sm')
            div(class='col-xs-6')
              a(href='' class='thumbnail')
                img(src='/images/kitchen1a.jpg')
            div(class='col-xs-6')
              a(href='' class='thumbnail')
                img(src='/images/kitchen1b.jpg')
        div(class='clear clearfix')
          h5(class='text-center' style='font-weight:bold') Notes
          textarea(rows=10)
        div(class='clear clearfix text-center' style='margin-top:15px;margin-bottom:30px;')
          a(class='btn btn-primary', href='/project/1/inspiration') Next
