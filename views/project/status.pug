extends ../layout

block content
  h4(class='main-title') Status
  h5(class='text-center' style='font-weight:bold') $11,250
  h6(class='text-center') remaining
  div(class='seq seq-prepare')
    h3 Prepare
    ul
      li(class=(stage >= 0 ? 'complete' : ''))
        span Designer (Sequencer)
      li(class=(stage >= 1 ? 'sub complete' : 'sub'))
        span Design project
      li(class=(stage >= 1 ? 'sub complete' : 'sub'))
        span Sequence freelancers
  div(class='seq seq-construct')
    h3 Construct
    ul
      li(class=(stage >= 2 ? 'complete' : ''))
        span Carpenter
      li(class=(stage >= 3 ? 'sub complete' : 'sub'))
        span Install inbuilt furniture
      li(class=(stage >= 2 ? 'complete' : ''))
        span Painter
      li(class=(stage >= 3 ? 'sub complete' : 'sub'))
        span Paint walls
      li(class=(stage >= 3 ? 'complete' : ''))
        span IKEA installer
      li(class=(stage >= 3 ? 'sub complete' : 'sub'))
        span Build furniture
  div(class='seq seq-refine')
    h3 Refine
    ul
      li(class=(stage >= 3 ? 'complete' : ''))
        span Cleaner
      li(class="sub")
        span Clean Space
      li
        span Florist
      li(class="sub")
        span Deliver flowers

  if stage == 0
    div(class='text-center', style='margin-bottom:40px;')
      a(class='btn btn-primary btn-large', style='margin-top:30px;', href='/project/1/milestone')
        | Next
  if stage == 1
    div(class='text-center', style='margin-bottom:40px;')
      a(class='btn btn-primary btn-large', style='margin-top:30px;', href='/project/1/status/2')
        | Next
  if stage == 2
    div(class='text-center', style='margin-bottom:40px;')
      a(class='btn btn-primary btn-large', style='margin-top:30px;', href='/project/1/status/3')
        | Next
  if stage == 3
    div(class='text-center', style='margin-bottom:40px;')
      a(class='btn btn-primary btn-large', style='margin-top:30px;', href='/project/1/status/4')
        | Next
