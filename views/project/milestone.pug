extends ../layout

block content
  h4(class='main-title') Milestone Delivered
  p(class='text-center') “Hey Chloe I hope you like the designs. I think you’ll love the teal chair and I adore the little touches of gold.”
  div(class='project-list')
    div(class='row')
      div(class='col-sm-8 col-sm-push-2 col-md-6 col-md-push-3')
        div(class='clear clearfix')
          h5(class='text-center' style='font-weight:bold') Renders
          div(class='row grid-sm' style='margin-bottom:0')
            div(class='col-xs-12')
              a(href='' class='thumbnail')
                img(src='/images/render.jpg')
            div(class='col-xs-12')
              a(href='' class='thumbnail')
                img(src='/images/elevation.png')
          h5(class='text-center' style='font-weight:bold') Products
          div(class='row grid-sm' style='margin-bottom:0')
            div(class='col-xs-4')
              a(href='' class='thumbnail')
                img(src='/images/product_chand.jpg')
            div(class='col-xs-4')
              a(href='' class='thumbnail')
                img(src='/images/product_island.jpg')
            div(class='col-xs-4')
              a(href='' class='thumbnail')
                img(src='/images/product_ssWash.jpg')
          h5(class='text-center' style='font-weight:bold') Trades and services
          div(class='row')
            div(class='col-xs-10 col-xs-push-1')
              p Required
              p
                input(type='checkbox' class='filled-in' id='carpenter' checked='checked')
                label(for='carpenter') Carpenter
              p Optional
              p
                input(type='checkbox' class='filled-in' id='painter' onchange='changePrice(this);')
                label(for='painter') Painter
              p
                input(type='checkbox' class='filled-in' id='ikea' checked='checked')
                label(for='ikea') IKEA assembly
              p
                input(type='checkbox' class='filled-in' id='cleaner' checked='checked')
                label(for='cleaner') Cleaner
              p
                input(type='checkbox' class='filled-in' id='florist')
                label(for='florist') Florist
          h5(class='text-center' style='font-weight:bold') Projected budget
          h3(class='text-center' id='milestone-price') $12,240
        div(class='clear clearfix text-center' style='margin-top:15px')
          a(class='btn waves-effect waves-light btn-large' href='/project/1/status/1')
            | Approve and List
            i(class='material-icons right') send
